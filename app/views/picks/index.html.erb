<h1>Listing picks</h1>

<table>
  <tr>
    <th>User</th>
    <th>Fight</th>
    <th>Fighter</th>
    <th>Outcome</th>
    <th>Final round</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @picks.each do |pick| %>
  <tr>
    <td><%= pick.user.name %></td>
    <td><%= pick.fight %></td>
    <td><%= pick.winner.try(:full_name) %></td>
    <td><%= pick.outcome %></td>
    <td><%= pick.last_round %></td>
    <td><%= link_to 'Show', pick %></td>
    <td><%= link_to 'Edit', edit_pick_path(pick) %></td>
    <td><%= link_to 'Destroy', pick, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

